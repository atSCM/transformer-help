{
  "name": "@atscm/transformer-help",
  "version": "0.1.0",
  "description": "A transformer that generates help for displays and scripts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atSCM/transformer-help.git"
  },
  "bugs": {
    "url": "https://github.com/atSCM/transformer-help/issues"
  },
  "homepage": "https://github.com/atSCM/transformer-help#readme",
  "author": "Lukas Hechenberger <lukas.hechenberger@bachmann.info>",
  "keywords": [
    "atscm",
    "transform",
    "transformer",
    "generate",
    "help",
    "example"
  ],
  "main": "out/index.js",
  "scripts": {
    "build": "rollup -c --environment NODE_ENV=production",
    "dev": "rollup -cw",
    "format": "prettier --ignore-path .gitignore \"**/*\" \"!{.{npm,git}ignore,CHANGELOG.md,docs/assets/**/*}\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "types": "tsc"
  },
  "renovate": {
    "extends": [
      "@ls-age:automergeDev"
    ]
  },
  "dependencies": {
    "rollup-pluginutils": "^2.8.2"
  },
  "peerDependencies": {
    "atscm": "^1.0.0-beta.46"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "0.12.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "11.0.0",
    "@rollup/plugin-typescript": "8.0.0",
    "bulma": "0.9.1",
    "prettier": "1.19.1",
    "prettier-plugin-svelte": "1.1.1",
    "rollup": "2.34.2",
    "rollup-plugin-string": "3.0.0",
    "rollup-plugin-svelte": "7.0.0",
    "svelte": "3.31.0",
    "tslib": "2.0.3",
    "typescript": "4.1.3"
  }
}
